/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f3e6; /* 古典米黄色背景 */
  font-family: "Microsoft YaHei", sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.title {
  font-size: 60rpx;
  color: #8B4513; /* 棕褐色 */
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 32rpx;
  color: #996b4a;
  margin-top: 10rpx;
}

.search-box {
  width: 90%;
  display: flex;
  margin: 20rpx 0 40rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #cab38f;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 36rpx;
  background: white;
}

.search-btn {
  margin-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 28rpx;
  background: #8B4513;
  color: white;
  font-size: 30rpx;
  border-radius: 8rpx;
  min-width: 100rpx;
  max-width: 150rpx;
}

.clear-btn {
  margin-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: #cab38f;
  color: white;
  font-size: 30rpx;
  border-radius: 8rpx;
  min-width: 100rpx;
  max-width: 150rpx;
}

.loading {
  margin: 40rpx 0;
  color: #996b4a;
  font-size: 32rpx;
}

.history {
  width: 90%;
  margin: 20rpx 0 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.history-title {
  font-size: 28rpx;
  color: #8B4513;
  display: block;
}

.history-clear-btn {
  font-size: 22rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #f0e6d2;
  color: #996b4a;
  border: 1rpx solid #cab38f;
  border-radius: 25rpx;
  min-width: auto;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tag-container {
  display: flex;
  align-items: center;
  background: rgba(139, 69, 19, 0.1);
  border: 1rpx solid rgba(139, 69, 19, 0.3);
  border-radius: 30rpx;
  padding-left: 20rpx;
  padding-right: 10rpx;
}

.history-tag {
  color: #8B4513;
  font-size: 32rpx;
  padding: 10rpx 6rpx 10rpx 10rpx;
}

.history-delete-btn {
  color: #996b4a;
  font-size: 32rpx;
  padding: 0 12rpx;
  font-weight: bold;
}

.results {
  width: 90%;
  margin-top: 20rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 32rpx;
  color: #5a3e2a;
  font-weight: bold;
}

.copy-btn {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  background: #cab38f;
  color: white;
  border-radius: 30rpx;
  min-width: auto;
  line-height: 1.5;
}

.poem-item {
  background: white;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-left: 10rpx solid #8B4513;
}

.poem-line {
  font-size: 34rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 15rpx;
}

/* 高亮匹配字符的样式 */
.highlighted-char {
  color: #d25b23; /* 橙红色 */
  font-weight: bold;
  text-shadow: 0 0 2px rgba(255, 150, 0, 0.2);
  padding: 0 2rpx;
}

.poem-source {
  font-size: 28rpx;
  color: #996b4a;
  display: block;
  text-align: right;
  font-style: italic;
}

.no-result {
  margin: 60rpx 0;
  color: #888;
  font-size: 32rpx;
  text-align: center;
}

.settings {
  width: 90%;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.settings-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background: #f0e6d2;
  color: #8B4513;
  border: 1rpx solid #cab38f;
  border-radius: 30rpx;
}

.footer {
  margin-top: 40rpx;
  padding: 20rpx;
  color: #cab38f;
  font-size: 24rpx;
  text-align: center;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.data-version {
  margin-top: 10rpx;
  color: #cab38f;
  font-size: 20rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: #f8f3e6;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #cab38f;
}

.modal-title {
  font-size: 36rpx;
  color: #8B4513;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  color: #8B4513;
  padding: 0 10rpx;
}

.modal-body {
  padding: 30rpx;
}

.update-option {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #cab38f;
}

.update-option:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.option-title {
  display: block;
  font-size: 32rpx;
  color: #5a3e2a;
  margin-bottom: 16rpx;
}

.option-desc {
  display: block;
  font-size: 28rpx;
  color: #996b4a;
  margin-bottom: 16rpx;
}

.option-btn {
  font-size: 28rpx;
  padding: 8rpx 24rpx;
  background: #8B4513;
  color: white;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.url-input {
  background: white;
  border: 2rpx solid #cab38f;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
