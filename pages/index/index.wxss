/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f3e6; /* 古典米黄色背景 */
  font-family: "Microsoft YaHei", sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.title {
  font-size: 60rpx;
  color: #8B4513; /* 棕褐色 */
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 32rpx;
  color: #996b4a;
  margin-top: 10rpx;
}

.search-box {
  width: 90%;
  display: flex;
  margin: 20rpx 0 40rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #cab38f;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 36rpx;
  background: white;
}

.search-btn {
  margin-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  background: #8B4513;
  color: white;
  font-size: 32rpx;
  border-radius: 8rpx;
}

.loading {
  margin: 40rpx 0;
  color: #996b4a;
  font-size: 32rpx;
}

.history {
  width: 90%;
  margin: 20rpx 0 30rpx;
}

.history-title {
  font-size: 28rpx;
  color: #8B4513;
  margin-bottom: 16rpx;
  display: block;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tag {
  padding: 10rpx 30rpx;
  background: rgba(139, 69, 19, 0.1);
  color: #8B4513;
  font-size: 32rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(139, 69, 19, 0.3);
}

.results {
  width: 90%;
  margin-top: 20rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 32rpx;
  color: #5a3e2a;
  font-weight: bold;
}

.copy-btn {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  background: #cab38f;
  color: white;
  border-radius: 30rpx;
  min-width: auto;
  line-height: 1.5;
}

.poem-item {
  background: white;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-left: 10rpx solid #8B4513;
}

.poem-line {
  font-size: 34rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 15rpx;
}

.poem-source {
  font-size: 28rpx;
  color: #996b4a;
  display: block;
  text-align: right;
  font-style: italic;
}

.no-result {
  margin: 60rpx 0;
  color: #888;
  font-size: 32rpx;
  text-align: center;
}

.footer {
  margin-top: 80rpx;
  padding: 20rpx;
  color: #cab38f;
  font-size: 24rpx;
  text-align: center;
  width: 100%;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
